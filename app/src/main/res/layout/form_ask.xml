<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BAFAFAFA"
    android:padding="17dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/places_i_would_love_to_visit"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/you_can_add_up_to_5_places"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:textColor="@color/color_icon_nomarl" />

    <ImageView
        android:id="@+id/ic_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_des"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_land_marker"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_des"
        app:layout_constraintStart_toEndOf="@id/ic_position"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="17dp"
        android:padding="10dp"
        android:background="@drawable/bg_button_stroke"
        android:layout_marginTop="@dimen/_20dp"/>
</android.support.constraint.ConstraintLayout>